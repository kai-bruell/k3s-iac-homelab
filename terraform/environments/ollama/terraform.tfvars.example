# Proxmox Verbindung
proxmox_endpoint = "https://192.168.178.1:8006"
proxmox_username = "root@pam"
proxmox_password = "your-password-here"
proxmox_node     = "pve"
proxmox_ssh_host = "192.168.178.1"

# NixOS Template
template_vm_id = 9100

# VM Konfiguration
vm_name        = "ollama"
hostname       = "ollama"
vm_id          = 500
datastore_id   = "local-zfs"
network_bridge = "vmbr0"

# VM Specs
vcpu         = 2
sockets      = 1
memory       = 2048
disk_size    = 20
numa_enabled = false

# Netzwerk
static_ip = "192.168.178.60/24"
gateway   = "192.168.178.1"
dns       = "192.168.178.1"

# SSH Keys
ssh_keys             = ["ssh-ed25519 AAAA... your-key"]
ssh_private_key_path = "~/.ssh/homelab-dev"

# NixOS Flake
nixos_flake_dir    = "../../../nixos"
nixos_flake_target = "base"
